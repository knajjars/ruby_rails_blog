<% if logged_in? :site_admin %>
  <nav class="breadcrumb blogcrumb">
    <%= link_to icon('fas', 'file'), toggle_status_blog_path(blog), method: :post, style: blog_status_helper(blog) %>
    <%= link_to icon('fas', 'edit'), edit_blog_path(blog) %>
    <%= link_to icon('fas', 'trash'), blog, method: :delete, data: { confirm: 'Are you sure?' } %>
  </nav>
<% end %>