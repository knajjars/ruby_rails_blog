<%= form_with(model: @portfolio, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", rows: 14 %>
  </div>

  <ul class="mt-3">
    <h3>Technologies used:</h3>
    <%= form.fields_for :technologies do |t| %>
      <li>
        <%= t.label :name %>
        <%= t.text_field :name, class: "form-control" %>
      </li>
    <% end %>
  </ul>

  <div class="form-group">
    <%= form.submit 'Submit', class: "btn btn-success" %>
  </div>
<% end %>
